@{
    ViewData["Title"] = "Buy Bread";
}
<h1>@ViewData["Title"]</h1>

<form id="breadOrderForm">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>

    <br />
    <br />

    <label for="number">Phone Number:</label>
    <input type="tel" id="number" name="number" pattern="[0-9]{10}" required>
    <br />
    <small>Enter a 10-digit phone number.</small>

    <br />
    <br />

    <label for="breadQuantity">Bread Quantity:</label>
    <input type="number" id="breadQuantity" name="breadQuantity" min="1" required> Loaves

    <br />
    <br />

    <label for="address">Address:</label>
    <textarea id="address" name="address" rows="4" required></textarea>
    
    <br />
    <br />

    <button type="submit">Place Order</button>
</form>